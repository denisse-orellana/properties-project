<div class="container pt-5">
  <%= link_to 'Add new property', new_property_path, class: "btn btn-outline-success p-3" %>
</div>

<div class="container pt-4 pb-5 d-flex flex-wrap justify-content-between">
  <% @properties.each do |property| %>
      <div class="card mt-3">
        <% if property.images.attached? %>
          <%= image_tag(property.images[0].variant(resize: "200x200").processed, alt: 'Property image', style: 'width: 18rem;')  if property.images[0] %> 
        <% end  %>        
        <div class="card-body">
          <p class="card-text">Address: <%= property.direction %></p>
          <p class="card-text"> Price: <%= number_to_currency(property.price, unit: "$", precision: 0) %></p>
          <p class="card-text">Area: <%= property.area %></p>
          <p class="card-text">Room number: <%= property.room_number %></p>
          <p class="card-text">Bathroom number: <%= property.bathroom_number %></p>
          <%= link_to 'See', property_path(property.id), class: "btn btn-primary" %>
        </div>
      </div>
  <% end %>
</div>